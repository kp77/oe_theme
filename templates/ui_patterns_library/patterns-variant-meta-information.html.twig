{#
/**
 * @file
 * UI Pattern variant meta information.
 */
#}

{% if variant is not empty %}
  <table class="ecl-table">
    <thead class="ecl-table__head">
    <tr class="ecl-table__row">
      <th class="ecl-table__header">{{ "Variant"|t }}</th>
      <th class="ecl-table__header">{{ "Name"|t }}</th>
      <th class="ecl-table__header">{{ "Description"|t }}</th>
    </tr>
    </thead>
    <tbody class="ecl-table__body">
    <tr class="ecl-table__row">
      <td data-ecl-table-header="{{ "Variant"|t }}" class="ecl-table__cell">{{ variant.label }}</td>
      <td data-ecl-table-header="{{ "Name"|t }}" class="ecl-table__cell"><code>{{ variant.name }}</code></td>
      <td data-ecl-table-header="{{ "Description"|t }}" class="ecl-table__cell">{{ variant.description }}</td>
    </tr>
    </tbody>
  </table>
{% endif %}
